<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ScoreKeeper.Views.CustomDiceConfig"
             Title="Custom Dice Configuration">
    <ContentPage.Resources>
        <!-- Implicit styles -->
        <Style 
            TargetType="{x:Type Editor}">
            <Setter 
                Property="BackgroundColor"
                Value="{StaticResource AppBackgroundColor}" />
        </Style>
    </ContentPage.Resources>

    <!-- Layout children vertically -->
    <StackLayout 
        Margin="{StaticResource PageMargin}">
        <Label 
            Text="Custom Dice Configuration "/>
        <Editor 
            x:Name="lowEnd" Placeholder="Enter new low-end number"
            Text="{Binding LowEnd}"
            HeightRequest="100"
            MaxLength="5" />
        <Editor 
            x:Name="highEnd" 
            Placeholder="Enter new High-end number"
            Text="{Binding HighEnd}"
            HeightRequest="100"
            MaxLength="5" />
        <Grid 
            ColumnDefinitions="*,*">
            <Button 
                Text="Save"
                Clicked="OnSaveButtonClicked" />
            <Button 
                Grid.Column="1"
                Text="Cancel"
                Clicked="OnCancelButtonClicked"/>
        </Grid>
    </StackLayout>
</ContentPage>
                Grid.Row="1" 
                Grid.Column="2" 
                VerticalOptions="Center" 
                HorizontalOptions="End" 
                IsVisible="False" />
            <Label 
                x:Name="ResultsD100C" 
                FontSize="18" 
                TextColor="#ffffff" 
                FontAttributes="Bold" 
                Text="" Grid.Row="1" 
                Grid.Column="3" 

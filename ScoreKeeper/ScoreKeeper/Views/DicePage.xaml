            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*,Auto,*,Auto,Auto"  
            ColumnDefinitions="Auto,*,20,100" 
            Padding="10,5,10,-20" >
            <!-- Results Section -->
            <!-- Results Header -->
            <Label 
                Text=" RESULTS:" 
                FontSize="20" 
                TextColor="#38154a" 
                FontAttributes="Bold" 
                Opacity="0.8" 
                Grid.Row="0" 
                Grid.Column="0" 
                Grid.ColumnSpan="2" 
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="Start" />
            <Button 
                x:Name="ClearResultsBtn" 
                Opacity="1" 
                Text="Clear" 
                FontSize="13" 
                Padding="0" 
                HeightRequest="20" 
                Button.TextColor="White" 
                BackgroundColor="#0072b1" 
                Margin="0,0,0,0" 
                Clicked="ClearResults" 
                Grid.Row="0" 
                Grid.Column="2" 
                Grid.ColumnSpan="2" 
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="End" />
            <!-- D100 Results Row -->
            <Label 
                x:Name="ResultsD100A" 
                FontSize="14" 
                FontAttributes="Bold" 
                Text="" 
                TextColor="#ffffff" 
                Grid.Row="1" 
                Grid.Column="0" 
                VerticalOptions="Center" 
                HorizontalOptions="End" 
                IsVisible="False" />
            <Label 
